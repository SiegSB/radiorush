{
    "name": "siegsb/radiorush",
    "type": "library",
    "description": "Complete PHP library for the CentovaCast API",
    "keywords": [
        "siegsb",
        "radiorush",
        "centova",
        "centovacast",
        "api"
    ],
    "homepage": "https://github.com/SiegSB/radiorush",
    "license": "MIT",
    "authors": [
    {
        "name": "Paris Niarfe Baltazar Salguero",
        "email": "sieg.sb@gmail.com",
        "homepage": "http://www.pbaltazar.com",
        "role": "Developer"
    }
    ],
    "support": {
        "email": "sieg.sb@gmail.com",
        "issues": "https://github.com/SiegSB/radiorush/issues",
        "source": "https://github.com/SiegSB/radiorush/releases"
    },
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8",
        "squizlabs/php_codesniffer": "^2.3",
       "phpdocumentor/phpdocumentor": "2.*"
    },
    "autoload": {
        "psr-4": {
            "SiegSB\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    }
}